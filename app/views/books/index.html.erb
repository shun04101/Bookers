<h3>Books</h3>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to book.title %>
        </td>
        <td>
          <%= link_to book.body %>
        </td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Edit", edit_book_path(book.id) %>
        </td>
        <td>
          <%= link_to "Destroy", book_path(book.id), method: :delete %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

<h3>New book</h3>
<!-- form_with部分 -->
<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>